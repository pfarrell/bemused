.row
  .col-xs-12.col-sm-6
    %table.table.table-condensed
      %thead
        %tr
          %th
            type
          %th
            Count
      %tbody
        %tr
          %td
            Artists
          %td#artists_count
        %tr
          %td
            Albums
          %td#albums_count
        %tr#tracks
          %td.name
          %td.count
:javascript
  function set_albums(data) {
    $("#albums_count")[0].innerHTML= data.stats.albums.count;
  }

  function set_tracks(data) {
    $("#tracks").find($(".name")).text(data.type);
    $("#tracks").find($(".count")).text(data.count);
  }

  function set_artists(data) {
    $("#artists_count")[0].innerHTML= data.stats.artists.count;
  }

  $(document).ready(function() {
    get("#{url_for('/stats/albums')}", set_albums, null);
    get("#{url_for('/stats/artists')}", set_artists, null);
    get("#{url_for('/stats/tracks')}", set_tracks, null);
  });
