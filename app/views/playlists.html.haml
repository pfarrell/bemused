.playlists
  -playlists.each do |playlist|
    .item.playlist
      %a{href: "#{url_for("/playlist/#{playlist.id}")}"}
        %div
          %img{title: "#{playlist.name}", src: "#{url_for "/images/#{playlist.image_path}"}"}
        %div
          =playlist.name
%form{method: "POST", action:"#{url_for("/playlists/new")}"}
  .input-group.input-group-lg
    %span.input-group-addon
      New Playlist
    %input.form-control{type:"text", name:"name"}
  .submit
    %input.btn.btn-default.btn-lg{type:"Submit", value:"Submit"}
  
:javascript
  var container = document.querySelector('.playlists');
  var msnry = new Masonry( container, {
    // options
    columnWidth: 200,
    itemSelector: '.item'
  });
  imagesLoaded(container, function() {
    msnry.layout();
  });
