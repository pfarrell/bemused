.col-md-6
  %h3
    Artists
  %table.table.table-condensed.table-hover
    %thead
      %tr
        %td
          Artist Name
        %td
          Artist Id
    %tbody
      -artists.each do |artist|
        %tr
          %td
            =artist.name
          %td
            =artist.id
.col-md-6
  %h3
    Albums
  %table.table.table-condensed.table-hover
    %thead
      %tr
        %td
          Album Title
        %td
          Album Id
        %td
          Artist Name
        %td
          Artist Id
    %tbody
      -albums.each do |album|
        %tr
          %td
            =album.title
          %td
            =album.id
          %td
            =album.artist.name unless album.artist.nil?
          %td
            =album.artist.id unless album.artist.nil?
.col-md-12
  %h3
    Tracks
  %table.table.table-condensed.table-hover
    %thead
      %tr
        %td
          Track Id
        %td
          Title
        %td
          Album Title
        %td
          Album Id
        %td
          Artist Name
        %td
          Artist Id
        %td
          Path
    %tbody
      -tracks.each do |track|
        %tr
          %td
            =track.id
          %td
            =track.title
          %td
            =track.album.title unless track.album.nil?
          %td
            =track.album.id unless track.album.nil?
          %td
            =track.artist.name unless track.artist.nil?
          %td
            =track.artist.id  unless track.artist.nil?
          %td
            =track.media_file.absolute_path unless track.media_file.nil?
:javascript
  $('#search').prop('action', "#{url_for('/meta')}");
  $(document).ready(function() {
    $('#q').autocomplete('disable');
  });
